[colors]
accent = #bf616a

;==================================================================================
;  ___   _   ___
; | _ ) /_\ | _ \
; | _ \/ _ \|   /
; |___/_/ \_\_|_\
;
[bar/bottom]
monitor = eDP-1
bottom = false
width = 100%
height = 22


background = #002f343f
foreground = #eefafafa

overline-size = 0
overline-color = ${colors.accent}
underline-size = 3
underline-color = ${colors.accent}

;border-color = #ff0000
border-top-size = 0
border-top-color = #3d3d3d
;border-bottom = 0
;border-bottom-color = #333333

separator = |

spacing = 1
;padding-right = 4
padding-left = 0
padding-right = 0
module-margin-left = 1
module-margin-right = 1

font-0 = "NotoSans-Regular:size=8;0"
font-1 = "FontAwesome:size=9;0"
font-2 = "NotoSans-Regular:size=8;-1"
font-3 = "Telegrama:size=7;0"

modules-left = i3
modules-center = title
modules-right = pulseaudio battery_bar

tray-position = right
tray-detached = false

;==================================================================================
;  __  __  ___  ___  _   _ _    ___ ___
; |  \/  |/ _ \|   \| | | | |  | __/ __|
; | |\/| | (_) | |) | |_| | |__| _|\__ \
; |_|  |_|\___/|___/ \___/|____|___|___/
