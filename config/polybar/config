;/_  __/
; / /
;/_/
;<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<
[module/title]
type = internal/xwindow

format = <label>
format-background = #000000
format-foreground = #ffffff
format-padding = 4

label-maxlen = 50
